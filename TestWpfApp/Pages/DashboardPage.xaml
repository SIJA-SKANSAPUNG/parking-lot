<Page x:Class="TestWpfApp.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Stats Cards -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Available Slots -->
            <Border Background="White" Margin="5" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Available Slots" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="1" Text="157" FontSize="30" FontWeight="Bold" Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- Today's Entries -->
            <Border Grid.Column="1" Background="White" Margin="5" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Today's Entries" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="1" Text="124" FontSize="30" FontWeight="Bold" Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- Today's Exits -->
            <Border Grid.Column="2" Background="White" Margin="5" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Today's Exits" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="1" Text="98" FontSize="30" FontWeight="Bold" Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- Today's Revenue -->
            <Border Grid.Column="3" Background="White" Margin="5" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Today's Revenue" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="1" Text="$1,275.50" FontSize="30" FontWeight="Bold" Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Quick Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,20,5,5">
            <Button Content="Vehicle Entry" Width="120" Height="35" Margin="0,0,10,0" Click="btnQuickVehicleEntry_Click"/>
            <Button Content="Vehicle Exit" Width="120" Height="35" Margin="0,0,10,0" Click="btnQuickVehicleExit_Click"/>
            <Button Content="Vehicle Monitoring" Width="140" Height="35" Background="#2196F3" Foreground="White" Click="btnQuickVehicleMonitoring_Click"/>
        </StackPanel>

        <!-- Recent Activity -->
        <Border Grid.Row="3" Background="White" Margin="5,20,5,5" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Recent Activity" FontSize="16" FontWeight="SemiBold"/>

                <DataGrid Grid.Row="1" Margin="0,10,0,0" ItemsSource="{Binding RecentActivity}" 
                          AutoGenerateColumns="False" IsReadOnly="True" 
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          BorderThickness="0" VerticalGridLinesBrush="Transparent">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="150"/>
                        <DataGridTextColumn Header="Vehicle Number" Binding="{Binding VehicleNumber}" Width="150"/>
                        <DataGridTextColumn Header="Vehicle Type" Binding="{Binding VehicleType}" Width="100"/>
                        <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="100"/>
                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="100"/>
                        <DataGridTextColumn Header="Fee" Binding="{Binding Fee}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page> 