<Page x:Class="TestWpfApp.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWpfApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Page.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <!-- Add your primary button style here -->
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <!-- Add your secondary button style here -->
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Welcome and Logout -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
                <TextBlock x:Name="txtWelcome" 
                       Text="Welcome, Administrator" 
                       FontSize="14" 
                       FontStyle="Italic" 
                       Opacity="0.8" 
                       Margin="0,0,0,20"/>
            </StackPanel>
            
            <Button x:Name="btnLogout" 
                Grid.Column="1" 
                Content="Logout" 
                Width="100" 
                Height="35" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Click="btnLogout_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Available Slots -->
            <Border Grid.Column="0" 
                    Background="#E3F2FD" 
                    CornerRadius="10" 
                    Padding="15" 
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Available Slots" 
                             Foreground="#1976D2" 
                             FontSize="14"/>
                    <TextBlock Text="45" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Today's Entries -->
            <Border Grid.Column="1" 
                    Background="#E8F5E9" 
                    CornerRadius="10" 
                    Padding="15" 
                    Margin="5,0">
                <StackPanel>
                    <TextBlock Text="Today's Entries" 
                             Foreground="#2E7D32" 
                             FontSize="14"/>
                    <TextBlock Text="28" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Today's Exits -->
            <Border Grid.Column="2" 
                    Background="#FFF3E0" 
                    CornerRadius="10" 
                    Padding="15" 
                    Margin="5,0">
                <StackPanel>
                    <TextBlock Text="Today's Exits" 
                             Foreground="#F57C00" 
                             FontSize="14"/>
                    <TextBlock Text="25" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Today's Revenue -->
            <Border Grid.Column="3" 
                    Background="#FCE4EC" 
                    CornerRadius="10" 
                    Padding="15" 
                    Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Today's Revenue" 
                             Foreground="#C2185B" 
                             FontSize="14"/>
                    <TextBlock Text="Rp 450.000" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Quick Actions and Recent Activity -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Quick Actions -->
            <StackPanel Grid.Column="0" 
                        Width="200" 
                        Margin="0,0,20,0">
                <TextBlock Text="Quick Actions" 
                         FontSize="16" 
                         FontWeight="Bold" 
                         Margin="0,0,0,10"/>
                
                <Button x:Name="btnQuickVehicleEntry"
                        Content="Vehicle Entry"
                        Height="40"
                        Margin="0,0,0,10"
                        Click="btnQuickVehicleEntry_Click"
                        Style="{DynamicResource PrimaryButton}"/>
                
                <Button x:Name="btnQuickVehicleExit"
                        Content="Vehicle Exit"
                        Height="40"
                        Margin="0,0,0,10"
                        Click="btnQuickVehicleExit_Click"
                        Style="{DynamicResource SecondaryButton}"/>
                
                <Button x:Name="btnQuickVehicleMonitoring"
                        Content="Vehicle Monitoring"
                        Height="40"
                        Click="btnQuickVehicleMonitoring_Click"
                        Style="{DynamicResource SecondaryButton}"/>
            </StackPanel>

            <!-- Recent Activity -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Recent Activity" 
                         FontSize="16" 
                         FontWeight="Bold" 
                         Margin="0,0,0,10"/>

                <DataGrid x:Name="dgRecentActivities"
                         Grid.Row="1"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         GridLinesVisibility="None"
                         BorderThickness="1"
                         BorderBrush="#E0E0E0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" 
                                          Binding="{Binding Time, StringFormat=HH:mm}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Vehicle Number" 
                                          Binding="{Binding VehicleNumber}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Vehicle Type" 
                                          Binding="{Binding VehicleType}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Action" 
                                          Binding="{Binding Action}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Duration" 
                                          Binding="{Binding Duration}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Fee" 
                                          Binding="{Binding Fee, StringFormat='Rp {0:N0}'}" 
                                          Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Page>