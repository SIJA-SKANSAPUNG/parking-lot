<Window x:Class="ParkingOut.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkingOut.UI"
        mc:Ignorable="d"
        Title="ParkingOut Management System" Height="720" Width="1280" 
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <local:SidebarWidthToMarginConverter x:Key="SidebarWidthToMarginConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <local:SidebarControl x:Name="Sidebar" Grid.Column="0" />
        
        <!-- Main Content Area -->
        <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden">
            <Frame.Background>
                <SolidColorBrush Color="#F5F5F5" />
            </Frame.Background>
        </Frame>
    </Grid>
</Window> 